% layout 'default';
<div class="slide ui-corner-all">
<%= form_for id => $slide->pos => method => 'post' => begin %>
Slide #<%= $slide->pos %><br/>
<%= text_area 'text', (rows => 8, cols => 35) => begin %>
<%= $slide->text; %>
<% end %>
<br>
<%= text_field 'label', value => $slide->label %>
<br>
<%= text_field 'notes', value => $slide->notes %>
<br>
<%= submit_button %>
<% end %>
</div>
